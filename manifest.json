{
  "manifest_version": 3,
  "name": "Steam Cross-Platform Wishlist",
  "version": "0.4.0",
  "description": "Shows cross-platform availability (Switch/PlayStation/Xbox) on Steam wishlist pages using Wikidata",
  "permissions": ["storage"],
  "host_permissions": [
    "https://store.steampowered.com/*",
    "https://query.wikidata.org/*",
    "https://id.twitch.tv/*",
    "https://api.igdb.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://store.steampowered.com/wishlist/*"],
      "js": ["icons.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
