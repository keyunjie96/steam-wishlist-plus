{
  "name": "cross-platform-steam-wishlist",
  "version": "0.5.0",
  "description": "Chrome extension that adds platform availability icons to Steam wishlist",
  "private": true,
  "scripts": {
    "build": "node scripts/build.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --testTimeout=300000",
    "test:integration:quick": "node tests/run-integration-test.js --quick",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "esbuild": "^0.27.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5",
    "undici": "^7.18.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
